{
    "manifest_version": 2,
    "name": "Focused Youtube",
    "version": "0.25",
    "description": "Boosts productivity by removing video links from your recommended on youtube.",
    "homepage_url": "https://github.com/Zackyization/focused-youtube",

    "browser_action": {
        "browser_style": true,
        "default_title": "Focused Youtube",
        "default_popup": "popup/focused-youtube-popup.html"
    },

    "background" : {
        "scripts": ["background/focused-youtube-background.js"]
    },

    "content_scripts": [{
        "matches": ["*://*.youtube.com/*"],
        "js": ["content_scripts/focused-youtube.js"],
        "css": ["css/youtube-home.css"],
        "run_at": "document_idle",
        "all_frames": true
    }],

    "icons": {
        "48": "icons/focused_youtube_icon_default.svg",
        "96": "icons/focused_youtube_icon_default.svg"
    },

    "permissions": [
        "*://*.youtube.com/*",
        "storage",
        "tabs"
    ]
}